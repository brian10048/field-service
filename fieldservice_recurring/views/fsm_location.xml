<odoo>
    <record id="fsm_location_form_view_inherit_recurring" model="ir.ui.view">
        <field name="name">fsm.location.form.recurring</field>
        <field name="model">fsm.location</field>
        <field name="inherit_id" ref="fieldservice.fsm_location_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_view_fsm_orders']" position="after">
                <button type="object"
                        name="action_view_fsm_recurring"
                        class="oe_stat_button"
                        icon="fa-calendar"
                        attrs="{'invisible': [('fsm_recurring_count', '=', 0)]}"
                        groups="fieldservice.group_fsm_user">
                    <field name="fsm_recurring_count" widget="statinfo" string="FSM Recurring Orders"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
