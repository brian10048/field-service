<odoo>

    <!-- Field Service Activity -->
    <record id="fsm_activity_template_tree_view" model="ir.ui.view">
        <field name="name">fsm.activity.template.tree</field>
        <field name="model">fsm.activity.template</field>
        <field name="arch" type="xml">
            <tree string="Activity Template">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="fsm_activity_template_form_view" model="ir.ui.view">
        <field name="name">fsm.activity.template.form</field>
        <field name="model">fsm.activity.template</field>
        <field name="arch" type="xml">
            <form string="Activity Template">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder=" Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="outcome_type"/>
                            <field name="condition_ids"
                                   widget="many2many_tags"/>
                        </group>
                        <group>
                        </group>
                    </group>
                    <notebook>
                        <page name="description" string="Description">
                            <field name="description" nolabel="1"/>
                        </page>
                    </notebook>                    
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_fsm_activity_template" model="ir.actions.act_window">
        <field name="name">Field Service Activity Templates</field>
        <field name="res_model">fsm.activity.template</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Define an Activity Template for field service orders here.
            </p>
        </field>
    </record>

    <menuitem id="menu_fsm_activity_template"
              name="Activity Template"
              action="action_fsm_activity_template"
              parent="fieldservice.menu_fsm_config_order"
              sequence="34"/>

</odoo>
