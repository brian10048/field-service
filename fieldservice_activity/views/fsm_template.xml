<odoo>

    <record id="fsm_template_inherit_activity" model="ir.ui.view">
        <field name="name">Order Template Activities</field>
        <field name="model">fsm.template</field>
        <field name="inherit_id" ref="fieldservice.fsm_template_form_view"/>
        <field name="arch" type="xml">
            <group name="instructions" position="after">
                <group name="activities" string="Activities">
                    <field name="activity_line_ids" nolabel="1"
                           widget="one2many">
                        <tree editable="bottom">
                            <field name="sequence" widget="handle"/>
                            <field name="activity_template_id"/>
                        </tree>
                    </field>
                </group>
            </group>
        </field>
    </record>

</odoo>
